{
  "name": "chat-service",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "start": "nodemon src/server.js",
    "dev": "nodemon src/server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "cross-env SERVICE_NAME=chat-service node ../../shared/migration/migrate.js",
    "db:rollback": "cross-env SERVICE_NAME=chat-service node ../../shared/migration/rollback.js",
    "db:status": "cross-env SERVICE_NAME=chat-service node ../../shared/migration/status.js",
    "db:reset": "npm run db:rollback && npm run db:migrate"
  },
  "type": "commonjs",
  "dependencies": {
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.2",
    "express": "^5.1.0",
    "express-fileupload": "^1.5.2",
    "express-session": "^1.18.2",
    "pg": "^8.16.3",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.5",
    "shared": "file:../../shared"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "nodemon": "^3.1.10"
  }
}

